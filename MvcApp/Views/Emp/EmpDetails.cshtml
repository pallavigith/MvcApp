
@{
    ViewBag.Title = "EmpDetails";
}

<h2>EmpDetails</h2>

<div class="container">
    @using (Html.BeginForm())
    {
        <div class="container">
            <table class="table">
                <tr>
                    <th>Emp Name</th>
                    <td>
                        @Html.TextBox("empname")
                    </td>
                </tr>
                <tr>
                    <th>Id</th>
                    <td>
                        @Html.TextBox("id")
                    </td>
                </tr>
                <tr>
                    <th>Mobile Number</th>
                    <td>
                        @Html.TextBox("phone")
                    </td>
                </tr>
                <tr>
                    <th>Select Gender</th>
                    <td>
                        @Html.RadioButton("Gender", "Male") Male
                        @Html.RadioButton("Gender", "Female") Female
                    </td>
                </tr>
                <tr>
                    <th>Select Dept</th>
                    <td>
                        <input type="checkbox" value="Comp" name="Comp" /> Comp
                        <input type="checkbox" value="Ele" name="Ele" /> Ele
                        <input type="checkbox" value="Mech" name="Mech" /> Mech
                    </td>
                </tr>
                <tr>
                    <th>Would you like to participate in survey ?</th>
                    <td>
                        @Html.DropDownList("Options");
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <input type="submit" value="Submit" />
                    </td>
                </tr>
            </table>

        </div>

    }

